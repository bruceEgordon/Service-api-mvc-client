@model EPiServer.Integration.Client.Models.Catalog.Entry

@{
    ViewBag.Title = "Create Entry";
}

<h2>Create Entry</h2>

@using (Html.BeginForm("SubmitEntry", "Home"))
{
    <h4>Entry Data</h4>
    <div class="container">
        <div class="form-row">
            <div class="form-group col-4">
                <label>Code</label>
                @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-4">
                <label>Name</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <label>Catalog</label>
                @Html.EditorFor(m => m.Catalog, new { htmlAttributes =
               new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group col-4">
                <label>Entry Type</label>
                @Html.EditorFor(m => m.EntryType, new { htmlAttributes
               = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group col-4">
                <label>Meta Class</label>
                @Html.EditorFor(m => m.MetaClass, new { htmlAttributes
               = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <label>Start Date</label>
                @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-4">
                <label>End Date</label>
                @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-4">
                <div class="form-check">
                    @Html.EditorFor(m => m.IsActive, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" for="IsActive">Is Active</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <h5>Variation Properties</h5>
        </div>
        <div class="form-row">
            <div class="form-group col-2">
                <label>Max Quantity</label>
                @Html.EditorFor(m => m.Variation.MaxQuantity, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <label>Min Quantity</label>
                @Html.EditorFor(m => m.Variation.MinQuantity, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <label>Tax Category</label>
                @Html.EditorFor(m => m.Variation.TaxCategory, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <label>Weight</label>
                @Html.EditorFor(m => m.Variation.Weight, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-row">
            <h5>Custom Properties</h5>
        </div>
        <div class="form-row">
            <div class="form-group col-2">
                <label>Size</label>
                @Html.EditorFor(m => m.Size, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <label>Color</label>
                @Html.EditorFor(m => m.Color, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <label>Brand</label>
                @Html.EditorFor(m => m.Brand, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-2">
                <div class="form-check">
                    @Html.EditorFor(m => m.CanBeMonogrammed, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" for="CanBeMonogrammed">Monogrammed</label>
                </div>
            </div>
        </div>
        <div class="form-row mb-4">
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}